{
  "name": "abac-api",
  "version": "0.2.0",
  "description": "Attribute Base Access Control Application in Nestjs",
  "author": "Ruben J Garcia <hola@rubenjgarcia.cloud>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"cli/**/*.ts\" \"generator/schematics/utils/*.ts\" \"generator/schematics/abac/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,cli}/**/*.ts\" \"generator/schematics/{utils,abac}/*.ts\" --fix",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand --detectOpenHandles",
    "test:cov": "jest --coverage --runInBand --detectOpenHandles",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --detectOpenHandles",
    "test:e2e": "jest --config ./test/jest-e2e.json --runInBand --detectOpenHandles",
    "prepare": "husky install",
    "prebuild:generator": "rimraf lib/schematics",
    "build:generator": "tsc --project tsconfig.generator.json",
    "postbuild:generator": "cpx-fixed generator/schematics/collections.json lib/schematics && cpx-fixed generator/schematics/abac/schema.json lib/schematics/abac && cpx-fixed \"generator/schematics/abac/files/**/*\" lib/schematics/abac/files",
    "generate": "schematics .:abac --dry-run=false",
    "postgenerate": "npm run lint && npm run format",
    "prebuild:cli": "rimraf lib/cli",
    "build:cli": "tsc --project tsconfig.cli.json",
    "cli": "node ./lib/cli/abac --"
  },
  "dependencies": {
    "@automapper/classes": "^8.7.7",
    "@automapper/core": "^8.7.7",
    "@casl/ability": "^6.5.0",
    "@casl/mongoose": "^7.2.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/event-emitter": "^2.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/mongoose": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@timonmasberg/automapper-nestjs": "^0.0.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "helmet": "^7.0.0",
    "mongoose": "^7.5.0",
    "otplib": "^12.0.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "qrcode": "^1.5.3",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.4",
    "@types/jest-when": "^3.5.2",
    "@types/node": "^18.0.0",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/pluralize": "^0.0.29",
    "@types/qrcode": "^1.5.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cpx-fixed": "^1.6.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.0",
    "jest": "28.1.2",
    "jest-when": "^3.5.1",
    "mongodb-memory-server": "^8.10.0",
    "nest-commander": "^3.12.0",
    "node-mocks-http": "^1.11.0",
    "pluralize": "^8.0.0",
    "prettier": "^2.3.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.8.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleDirectories": [
      "<rootDir>/../",
      "node_modules"
    ]
  },
  "schematics": "./lib/schematics/collections.json"
}
